        <Button Width="70" Height="25" Content="Buy" HorizontalAlignment="center" Grid.Row="0" VerticalAlignment="Center" Grid.Column="1" />
        <Button Width="70" Height="25" Content="Buy" HorizontalAlignment="center" Grid.Row="1" VerticalAlignment="Center" Grid.Column="1"  />
        <Button Width="70" Height="25" Content="Buy" HorizontalAlignment="center" Grid.Row="2" VerticalAlignment="Center" Grid.Column="1"  />
